 static void Exercicio7()
    {
        for (int i = 1; i <= 20; i++)
        {
            Console.WriteLine($"Tabuada de {i}:");
            for (int j = 1; j <= 10; j++)
                Console.WriteLine($"{i} x {j} = {i * j}");
            Console.WriteLine("Pressione uma tecla para continuar...");
            Console.ReadKey();
        }
    }
